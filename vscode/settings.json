{
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Iosevka','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "'Iosevka'",
    "ruby.format": "rubocop",
    "ruby.intellisense": "rubyLocate",
    "ruby.useBundler": true,
    // Basic settings: turn linter(s) on
    "ruby.lint": {
        "reek": false,
        "rubocop": true,
        "ruby": false, //Runs ruby -wc
        "fasterer": false,
        "debride": false,
        "ruby-lint": false
    },

    // Time (ms) to wait after keypress before running enabled linters. Ensures
    // linters are only run when typing has finished and not for every keypress
    "ruby.lintDebounceTime": 500,
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Kary Pro Colors Ôºç Dark",
    "workbench.iconTheme": "vscode-icons",
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
}
